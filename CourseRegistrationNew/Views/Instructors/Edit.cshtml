@model CourseRegistrationNew.Models.Instructors

@{
    ViewData["Title"] = "Edit";
  //  var listCourses = (List<Courses>)ViewData["Courses"];
}

<h1>Edit</h1>


<h4>Instructors</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InstructorId" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input id="inputName" asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
                <p id="NameValidationMessage"></p>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input id="inputLastName" asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
                <p id="LastNameValidationMessage"></p>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input id="inputEmail" asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                <p id="EmailValidationMessage"></p>
            </div>
            
            
            <div class="form-group">
                <label asp-for="Courses" class="control-label"></label>
                @Html.DropDownList("CourseId",
                        new SelectList(ViewBag.Courses, "CourseID", "CourseName"), ViewBag.CourseId as String)

            </div>                
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
 
}
