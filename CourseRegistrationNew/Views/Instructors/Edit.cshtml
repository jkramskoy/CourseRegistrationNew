@model CourseRegistrationNew.Models.Instructors

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<h4>Instructors</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InstructorId" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.CourseName" class="control-label"></label>
                <input asp-for="Courses.CourseName" class="form-control" />
                <span asp-validation-for="Courses.CourseName" class="text-danger"></span>

            </div>
            
                @if (ViewBag.Courses != null)
                {
                    <div>
                        <h4>Courses:</h4>
                        <dl class="dl-horizontal">

                            foreach (var item in ViewBag.Courses)
                            {
                            <dt>Name: </dt>
                            <dd>item.CourseName</dd>
                        
                            }
                        </dl>
                    </div>
                }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
